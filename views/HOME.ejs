<script>
    // Client-side code to handle like button click
    document.querySelectorAll('.like-btn').forEach(async (btn) => {
        const postId = btn.closest('.post').dataset.postId;
        const response = await fetch(`/check-like?postId=${postId}&userId=<%= user.id %>`);
        const data = await response.json();
        if (response.ok) {
            // Check if the post is liked by the user and set button color accordingly
            btn.classList.toggle('liked', data.liked);
        } else {
            alert(data.error);
        }

        btn.addEventListener('click', async () => {
            const liked = btn.classList.contains('liked');
            const response = await fetch('/like', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ postId, userId: '<%= user.id %>', liked }) // Pass user id dynamically
            });
            const responseData = await response.json();
            if (response.ok) {
                // Update like count on button text
                let likeCount = parseInt(btn.textContent.match(/\d+/)[0]);
                likeCount = liked ? likeCount - 1 : likeCount + 1; // Increment or decrement like count based on user action
                btn.textContent = `Like (${likeCount})`;
                // Toggle liked class for button color
                btn.classList.toggle('liked', responseData.liked);
            } else {
                alert(responseData.error);
            }
        });
    });
</script>
<script>
// Client-side code to handle posting a new post
// Client-side code to handle posting a new post
document.getElementById('post-btn').addEventListener('click', async () => {
  const text = document.getElementById('post-text').value.trim();
  if (!text) {
    alert('Please enter some text for your post.');
    return;
  }

  const response = await fetch('/post', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json'
    },
    body: JSON.stringify({ userId: '<%= user.id %>', text })
  });

  if (response.ok) {
    const postData = await response.json();
    // Call a function to append the new post to the page
    appendPost(postData);
  } else {
    const data = await response.json();
    alert(data.error || 'An error occurred while adding your post');
  }
});

// Function to append a new post to the page
function appendPost(postData) {
  const { id, username, profile_picture, text, file_path, file_type, likes, shares } = postData;

  // Create HTML for the new post
  const postHTML = `
    <div class="post" data-post-id="${id}" data-liked="false">
      <div class="post-header">
          <img src="${profile_picture}" alt="${username}'s Profile Picture">
          <span>${username}</span>
      </div>
      <div class="post-content">
          <p>${text}</p>
          ${fileHTML(file_path, file_type)}
      </div>
      <div class="post-actions">
          <button class="like-btn">Like (${likes})</button>
          <button class="share-btn">Share (${shares})</button>
          <button class="comment-btn">Comment</button>
      </div>
    </div>
  `;

  // Append the new post to the page
  document.getElementById('center').insertAdjacentHTML('afterbegin', postHTML);
}

// Function to generate HTML for different types of post attachments (image, video, audio, document)
function fileHTML(filePath, fileType) {
  if (!filePath) return '';
  switch (fileType) {
    case 'image':
      return `<img src="${filePath}" alt="Post Image">`;
    case 'video':
      return `
        <video controls>
          <source src="${filePath}" type="video/mp4">
          Your browser does not support the video tag.
        </video>
      `;
    case 'audio':
      return `
        <audio controls>
          <source src="${filePath}" type="audio/mp3">
          Your browser does not support the audio tag.
        </audio>
      `;
    case 'document':
      return `<a href="${filePath}">Download Document</a>`;
    default:
      return '';
  }
}


</script>
<script>
 document.getElementById('post-btn').addEventListener('click', async () => {
  const text = document.getElementById('post-text').value.trim();
  const fileInput = document.getElementById('post-file');
  const file = fileInput.files[0]; // Get the selected file
  const userId = document.getElementById('user-id').value; // Get the user ID

  if (!text && !file) {
    alert('Please enter some text or select a file for your post.');
    return;
  }

  const formData = new FormData();
  formData.append('userId', userId); // Include the userId in the form data
  formData.append('text', text);
  if (file) {
    formData.append('file', file);
  }

  const response = await fetch('/post', {
    method: 'POST',
    body: formData
  });

  if (response.ok) {
    alert('Post added successfully');
    window.location.reload(); // Reload the page to display the new post
  } else {
    const data = await response.json();
    alert(data.error || 'An error occurred while adding your post');
  }
});

</script>
