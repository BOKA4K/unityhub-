<script>
  document.addEventListener('DOMContentLoaded', () => {
    const commentButtons = document.querySelectorAll('.comment-btn');
    
    commentButtons.forEach(button => {
        button.addEventListener('click', () => {
            const postElement = button.closest('.post');
            const commentInputWrapper = postElement.querySelector('.comment-input-wrapper');
            commentInputWrapper.style.display = 'block'; // Show the comment input area
        });
    });

    // Handle post comment button click
    const postCommentButtons = document.querySelectorAll('.post-comment-btn');
    
    postCommentButtons.forEach(button => {
        button.addEventListener('click', async () => {
            const postElement = button.closest('.post');
            const postId = postElement.dataset.postId;
            const commentTextarea = postElement.querySelector('.comment-textarea');
            const commentText = commentTextarea.value.trim();

            if (!commentText) {
                alert('Please enter your comment.');
                return;
            }

            // Send the comment data to the server
            const response = await fetch('/comment', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ postId, commentText })
            });

            if (response.ok) {
                commentTextarea.value = ''; // Clear the comment textarea
            } else {
                const data = await response.json();
                alert(data.error || 'An error occurred while adding your comment.');
            }
        });
    });
});


